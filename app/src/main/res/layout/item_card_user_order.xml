<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark"
            android:orientation="vertical">
            <TextView
                android:id="@+id/helperName"
                android:fontFamily="@font/bungee_regular"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_ex" />
            <TextView
                android:id="@+id/helperExperience"
                android:text="@string/experience"
                android:textColor="@color/yellow"
                android:layout_gravity="center"
                android:fontFamily="@font/bungee_regular"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RatingBar
                android:id="@+id/orderRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:numStars="5"
                android:isIndicator="false"
                android:progressTint="@color/yellow"
                android:rating="4" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>